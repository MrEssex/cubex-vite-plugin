{
  "name": "cubex-vite-plugin",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrEssex/cubex-vite-plugin"
  },
  "license": "MIT",
  "author": {
    "name": "Kyle Essex",
    "url": "https://github.com/MrEssex"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "run-s clean build:*",
    "clean": "rimraf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build:esm": "esbuild src/index.ts --platform=node --format=esm --outfile=dist/index.js ",
    "build:copy": "cp src/dev-server-index.html dist/",
    "lint": "eslint --ext .ts ./src ./tests",
    "test": "vitest run"
  },
  "dependencies": {
    "picocolors": "^1.1.1",
    "vite-plugin-full-reload": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "esbuild": "0.16.10",
    "eslint": "^8.14.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.6.4",
    "vite": "^6.0.0",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0"
  },
  "engines": {
    "node": ">=14"
  }
}
